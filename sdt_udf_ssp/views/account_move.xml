<odoo>
    <data>
        <record model="ir.ui.view" id="udf_account_move_inherit_form">
            <field name="name">udf.account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <field name="picking_tt"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page string="Picking DO" name="studio_page_hNkgX" attrs="{'readonly': [('state', '!=', 'draft')],'invisible':[('picking_tt','=',False)]}">
                      <group name="picking_tt">
                        <field name="stock_picking_tt_ids"  widget="many2many_tags" force_save="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                      </group>
                    </page>
                  </xpath>
            </field>
        </record>
    </data>
</odoo>