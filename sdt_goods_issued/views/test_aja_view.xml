<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_test_aja_form">
        <field name="name">test_aja_form</field>
        <field name="model">sdt.test.aja</field>
        <field name="arch" type="xml">
            <form string="Test Aja">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="open,to_approved,approved,rejected,canceled,valid"
                            statusbar_colors='{"valid":"blue"}'/>
                </header>
                <sheet>
                    <div class="oe_edit_only">
                        <label for="name" class="oe_inline"/>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline" attrs="{'readonly': [('state','!=', 'open')]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state','!=', 'open')]}"/>
                        </group>
                        <group>
                            <field name="company_id" attrs="{'readonly': [('state','!=', 'open')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="product_tab" string="Products">
                            <field name="line_ids" mode="tree,kanban" widget="section_and_note_one2many" attrs="{'readonly':[('state', '!=', 'open')]}">
                                <tree editable="bottom"  default_order="sequence, id">
                                    <control>
                                        <create name="add_product_control" string="Add a product"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>
                                    <field name="sequence" widget="handle"/>
                                    <field name="display_type" invisible="1"/>
                                    <field name="company_id" invisible="1"/>
                                    <field name="product_id" widget="product_configurator" attrs="{'required': [('display_type', '=', False)]}" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                                    <field name="name" widget="section_and_note_text" optional="show"/>
                                    <field name="product_uom_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_test_aja_tree">
        <field name="name">test_aja_tree</field>
        <field name="model">sdt.test.aja</field>
        <field name="arch" type="xml">
            <tree decoration-info="state in ('open')" string="Test Aja">
                <field name="name"/>
                <field name="date"/>
                <field name="company_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_test_aja_search" model="ir.ui.view">
        <field name="name">test_aja_list_select</field>
        <field name="model">sdt.test.aja</field>
        <field name="arch" type="xml">
            <search string="Search Test Aja">
                <field name="name" string="Test Aja"/>
                <separator/>
                <field name="state"/>
                <filter name="state_open" string="open"
                        domain="[('state','=','open')]"/>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="test_aja_form_action">
        <field name="name">Test Aja</field>
        <field name="res_model">sdt.test.aja</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_test_aja_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to start a new Test Aja process.
            </p><p>
            A Test Aja is an instruction to Issued a certain quantity of materials,
            so that they are available at a certain point in time.
            </p>
        </field>
    </record>
