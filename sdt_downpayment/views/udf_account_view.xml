<odoo>
    <data>
        <record model="ir.ui.view" id="account_move_form_udf">
            <field name="name">account_move_form_udf</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']" position="after">
					<field name="dp_line_ids" readonly="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True,'no_open':True}" >
						<tree string="Detail Down Payment" readonly="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True,'no_open':True}" >
							<field name="dp_no" />
							<field name="account_dp" />
							<field name="close_amount" />
							<field name="balance_amount" />
							<field name="state"  />
						</tree>
					</field>
				</xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="account_invoice_supplier_form">
            <field name="name">account.invoice_supplier_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='invoice_line_ids']" position="after">
					<field name="dp_line_ids" readonly="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True,'no_open':True}" >
						<tree string="Detail Down Payment" readonly="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True,'no_open':True}" >
							<field name="dp_no" />
							<field name="account_dp" />
							<field name="close_amount" />
							<field name="balance_amount" />
						</tree>
					</field>
				</xpath>
            </field>
        </record>
    </data>
</odoo>